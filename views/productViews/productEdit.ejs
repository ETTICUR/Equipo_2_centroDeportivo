<%- include('../partials/head') %>

<body class="body">
  <%- include('../partials/navbar') %>

  <h1>Editar Actividad: <%= actividad.name %> </h1>
  <main class="mainCreateEdit">
    <div class="divCreateEdit">
      <form class="formCreateEdit" action="">
        <p>Completar los campos a modificar:</p>
        <div class="flex">
          <div class="inputForm ancho">
            <label for="name">Nombre de la Actividad: </label
            ><span class="asterisco">*</span>
            <input
              type="text"
              name="name"
              id="name"
              value=" <%= actividad.name %> "
            />
          </div>

          <div class="inputForm ancho">
            <label for="image">Imágen: </label><span class="asterisco">*</span>
            <input type="file" id="image" name="image" />
          </div>
        </div>

        <div class="flex">
          <div class="inputForm ancho">
            <label for="price">Precio: </label><span class="asterisco">*</span>
            <input
              type="text"
              name="price"
              id="price"
              value="<%= actividad.price %>"
            />
          </div>

          <div class="inputForm ancho">
            <label for="category">Categoria: </label
            ><span class="asterisco">*</span>
            <select name="category" id="category" class="selectRegister">
              <option disabled>Elige una opción</option>
              <option value="aerobico"<%= actividad.category == 'aerobico' ? 'selected' : '' ; %>>Aeróbico</option>
              <option value="fuerza" <%= actividad.category == 'fuerza' ? 'selected' : '' ; %>>Fuerza</option>
              <option value="relax" <%= actividad.category == 'relax' ? 'selected' : '' ; %>>Relax</option>
              <option value="recuperacion" <%= actividad.category == 'recuperacion' ? 'selected' : '' ; %>>Recuperación</option>
            </select>
          </div>
        </div>

        <div class="flex">
          <div class="inputForm ancho">
            <label for="morningShift">Horario Mañana: </label
            ><span class="asterisco">*</span>
            <select
              name="morningShift"
              id="morningShift"
              class="selectRegister"
            >
              <option disabled>Elige una opción</option>
              <option value="8-9" <%= actividad.morningShift == '8-9' ? 'selected' : '' ; %>>de 08:00Hs a 09:00Hs</option>
              <option value="9-10" <%= actividad.morningShift == '9-10' ? 'selected' : '' ; %>>de 09:00Hs a 10:00Hs</option>
              <option value="10-11" <%= actividad.morningShift == '10-11' ? 'selected' : '' ; %>>de 10:00Hs a 11:00Hs</option>
              <option value="11-12" <%= actividad.morningShift == '11-12' ? 'selected' : '' ; %>>de 11:00Hs a 12:00Hs</option>
              <option value="8-12" <%= actividad.morningShift == '8-12' ? 'selected' : '' ; %>>de 08:00Hs a 12:00Hs</option>
              <option value="sinTurno" <%= actividad.morningShift == 'sinTurno' ? 'selected' : '' ; %>>Sin turnos por la mañana</option>
            </select>
          </div>

          <div class="inputForm ancho">
            <label for="afternoonShift">Horario Tarde: </label
            ><span class="asterisco">*</span>
            <select
              name="afternoonShift"
              id="afternoonShift"
              class="selectRegister"
            >
              <option disabled>Elige una opción</option>
              <option value="14-15"<%= actividad.afternoonShift == '14-15' ? 'selected' : '' ; %>>de 14:00Hs a 15:00Hs</option>
              <option value="15-16"<%= actividad.afternoonShift == '15-16' ? 'selected' : '' ; %>>de 15:00Hs a 16:00Hs</option>
              <option value="16-17"<%= actividad.afternoonShift == '16-17' ? 'selected' : '' ; %>>de 16:00Hs a 17:00Hs</option>
              <option value="17-18"<%= actividad.afternoonShift == '17-18' ? 'selected' : '' ; %>>de 17:00Hs a 18:00Hs</option>
              <option value="14-18"<%= actividad.afternoonShift == '14-18' ? 'selected' : '' ; %>>de 14:00Hs a 18:00Hs</option>
              <option value="sinTurno"<%= actividad.afternoonShift == 'sinTurno' ? 'selected' : '' ; %>>Sin turnos por la tarde</option>
            </select>
          </div>

          <div class="inputForm ancho">
            <label for="nightShift">Horario Noche: </label
            ><span class="asterisco">*</span>
            <select name="nightShift" id="nightShift" class="selectRegister">
              <option disabled>Elige una opción</option>
              <option value="18-19" <%= actividad.nightShift == '18-19' ? 'selected' : '' ; %>>de 18:00Hs a 19:00Hs</option>
              <option value="19-20" <%= actividad.nightShift == '19-20' ? 'selected' : '' ; %>>de 19:00Hs a 20:00Hs</option>
              <option value="20-21" <%= actividad.nightShift == '20-21' ? 'selected' : '' ; %>>de 20:00Hs a 21:00Hs</option>
              <option value="21-22" <%= actividad.nightShift == '21-22' ? 'selected' : '' ; %>>de 21:00Hs a 22:00Hs</option>
              <option value="sinTurno" <%= actividad.nightShift == 'sinTurno' ? 'selected' : '' ; %>>Sin turnos por la noche</option>
            </select>
          </div>
        </div>

        <div class="inputForm">
          <label for="description">Descripción: </label
          ><span class="asterisco">*</span>
          <textarea
            type="text"
            name="description"
            id="description"
            value=" <%= actividad.description %> "
          ></textarea>
        </div>

        <div class="divBoton">
          <button class="btn" type="submit">
            <i class="fas fa-check"></i> Editar
          </button>
        </div>
      </form>
    </div>
  </main>

  <%- include('../partials/footer') %>
