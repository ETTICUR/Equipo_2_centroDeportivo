              <% if(locals.errors && errors.passwordConfirm) { %>
                <div>
                  <span class="errorInput"> * <%= errors.passwordConfirm.msg %> </span>
                </div>
                <% } %>
            </div> -->

            <div class="divBoton">
              <button class="btn" type="submit">
                <i class="fas fa-check"></i> Modificar
              </button>
            </div>
          </form>
        </div>
      </main>

