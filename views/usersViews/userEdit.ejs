              <% if(locals.errors && errors.password) { %>
                <div>
                  <span class="errorInput"> * <%= errors.password.msg %> </span>
                </div>
                <% } %>
            </div>

            <div class="inputForm">
              <label for="confirmarContraseña">Confirmar contraseña:
              </label><span class="asterisco">*</span>
