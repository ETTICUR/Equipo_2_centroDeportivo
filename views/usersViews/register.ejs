<%- include('../partials/head') %>

  <body class="body">
    <%- include('../partials/navbar') %>

      <h1>Sé parte de tú cambio</h1>
      <main class="mainRegister">
        <div class="divRegistro">
          <div class="divImagen"></div>
          <form action="/register" method="post" enctype="multipart/form-data">
            <p>Para comenzar completa los campos:</p>
            <div class="flex">
              <div class="inputForm ancho">
                <label for="nombre">Nombre: </label><span class="asterisco">*</span>
                <input
                  type="text"
                  name="nombre"
                  id="nombre"
                  placeholder="Tu nombre"
                  />
              </div>
              <div class="inputForm ancho">
                <label for="apellido">Apellido: </label><span class="asterisco">*</span>
                <input
                  type="text"
                  name="apellido"
                  id="apellido"
                  placeholder="Tu apellido"
                  />
              </div>
              <div class="inputForm ancho">
                <label for="image">Imágen: </label><span class="asterisco">*</span>
                <input type="file" id="image" name="fotoPerfil" />
               <% if(locals.errors && errors.fotoPerfil) { %>
                  <div>
                    <span class="errorInput"> * <%= errors.fotoPerfil.msg %> </span>
                    </div>
                    <% } %>
                    </div>
                  </div>

                  <div class="flex espacio">
                    <div class="inputForm">
                      <div class="inputForm">
                        <label for="genero">Género: </label><span
                          class="asterisco">*</span>
                        <select name="genero" id="genero"
                          class="selectRegister">
                          <option selected disabled>Elige una opción</option>
                          <option value="masculino">Masculino</option>
                          <option value="femenino">Femenino</option>
                          <option value="otro">Otro</option>
                        </select>
                      </div>
                    </div>
                    <div class="inputForm">
                      <label for="edad">Edad: </label><span class="asterisco">*</span>
                      <input type="number" name="edad" id="edad" placeholder="Tu
                        edad" />
                    </div>
                    <div class="inputForm">
                      <label for="actividad">Actividad preferida: </label><span
                        class="asterisco">*</span>
                      <select name="actividad" id="actividad"
                        class="selectRegister">
                        <option selected disabled>Elige una opción</option>
                        <option value="aerobico">Aeróbico</option>
                        <option value="fuerza">Fuerza</option>
                        <option value="relax">Relax</option>
                        <option value="combinado">Combinado</option>
                      </select>
                    </div>
                  </div>

                  <div class="inputForm">
                    <label for="email">Correo electrónico: </label><span
                      class="asterisco">*</span>
                    <input type="email" name="email" id="email" placeholder="Tu
                      email" />
                  </div>
                  <div class="inputForm">
                    <label for="contraseña">Contraseña: </label><span
                      class="asterisco">*</span>
                    <input
                      type="password"
                      name="password"
                      id="password"
                      placeholder="Ingresa tu contraseña"
                      />
                  </div>
                  <div class="inputForm">
                    <label for="confirmarContraseña">Confirmar contraseña:
                    </label><span class="asterisco">*</span>
                    <input
                      type="password"
                      name="passwordConfirm"
                      id="passwordConfirm"
                      placeholder="Confirma tu contraseña"
                      />
                  </div>
                  <div class="terminos">
                    <div>
                      <input type="checkbox" name="condiciones" id="condiciones"
                        />
                      <label for="condiciones">Acepto aviso de privacidad y
                        términos y condiciones</label>
                    </div>
                  </div>
                  <div class="divBoton">
                    <button class="btn" type="submit">
                      <i class="fas fa-check"></i> Registrarme
                    </button>
                  </div>
                </form>
              </div>
            </main>

            <%- include('../partials/footer') %>
