<%- include('../partials/head') %> 

<body class="bodyLogin">

    <%- include('../partials/navbar') %> 

    <main class="mainLogin">
        <h1 class="tituloLogin">Ingresá a tu cuenta</h1>
        <div class="loginBox">
            <div class="imagenLogin">
                <img src="/images/Logo Centro Deportivo Blanco.png" alt="Logo Centro Deportivo">
            </div>

            <form class="formLogin" method="post" action="/login">
                <div class="inputForm">
                    <label for="email">Correo Electrónico:</label>
                    <input type="text" placeholder="Ingresar Correo Electrónico" id="email" name="email" value="<%= locals.oldData ? oldData.email : null %>">
                    <% if(locals.errors && errors.email) { %>
                        <div>
                          <span class="errorInput"> * <%= errors.email.msg %> </span>
                        </div>
                        <% } %>
                </div>

                <div class="inputForm">
                    <label for="password">Contraseña:</label>
                    <input type="password" placeholder="Ingresar Contraseña" id="password" name="password">
                    <% if(locals.errors && errors.password) { %>
                        <div>
                          <span class="errorInput"> * <%= errors.password.msg %> </span>
                        </div>
                        <% } %>
                </div>

                <div class="divBoton">
                    <button class="btn" type="submit"><i class="fas fa-right-to-bracket"></i> Ingresar</button>
                </div>

                <div class="recuerdameRecupero">
                    <div class="recuerdame">
                        <input type="checkbox" name="recuerdame" id="recuerdame">
                        <label for="recuerdame">Recuérdame</label>
                    </div>
    
                    <div class="recuperar">
                        <a href="#">Recuperar Contraseña</a>
                    </div>
                </div>

            </form>
    </main>

    <%- include('../partials/footer') %>