<%- include('../partials/head') %>

<body>
  <%- include('../partials/navbar') %>

  <main>
    <div class="bannerHome">
      <div class="contenedorBanner">
        <div>
          <span class="fraseBanner"
            ><b>TU</b> salud es <b>TU</b> bienestar y nosotros</span
          >
        </div>
        <div class="fraseBannerNegrita">
          <span>QUEREMOS VERTE BIEN.</span>
        </div>
      </div>

      <div class="iconoBanner">
        <i class="fa fa-toggle-on"></i>
        <p>¡A EJERCITARNOS!</p>
      </div>
    </div>

    <section class="seccionInfo">
      <div class="divInfo">
        <div class="info">
          <div class="iconoInfo">
            <i class="fas fa-dumbbell"></i>
          </div>
          <div class="tituloInfo">
            <p>Totalmente Equipado</p>
          </div>
          <span
            ><i
              >Contamos con uno de los más completos gimnasios para que nada te
              falte.</i
            ></span
          >
        </div>

        <div class="info">
          <div class="iconoInfo">
            <i class="fa-solid fa-graduation-cap"></i>
          </div>
          <div class="tituloInfo">
            <p>Profesores Especializados</p>
          </div>
          <span
            ><i
              >Nuestro staff de profesores y entrenadores están en permanente
              actualización.</i
            ></span
          >
        </div>

        <div class="info">
          <div class="iconoInfo">
            <i class="fa fa-person-running"></i>
          </div>
          <div class="tituloInfo">
            <p>Entrenamiento personalizado</p>
          </div>
          <span
            ><i
              >Brindamos el plan que mejor se ajuste a tus necesidades y
              objetivos personales.</i
            ></span
          >
        </div>
      </div>
    </section>

    <section class="seccionPlanes">
      <h2>Tenemos un Plan para Vos</h2>
      
      <div class="divPlanes">

      <% actividades.forEach(e => { %>

            <div class="plan">
              <img
                class="imgPlan"
                src="<%= e.image %>"
                alt="<%= e.name %>"
              />
              <div class="detallePlan">
                <p><i class="fa fa-check"></i> <%= e.name %> </p>
                <p><i class="fa fa-money-bill-1-wave"></i> <%= e.price %></p>
                <button class="btnPlan">
                  <i class="fa fa-plus"></i><a href="/producto/detalle/<%=e.id%>"> Detalle</a>
                </button>
              </div>
            </div>
      <% }) %>

      </div>
    </section>

    <div class="seccionMapa">
      <h2>Te Esperamos</h2>

      <div class="divMapa">
        <div class="mapa">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3430.163958651293!2d-62.00682778532962!3d-30.71379076969012!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x943503752a60b413%3A0xf1e60b8661b024f!2sSanCor%20Salud%20Morteros!5e0!3m2!1ses!2sar!4v1659133912104!5m2!1ses!2sar"
            width="600"
            height="450"
            style="border: 0"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
          ></iframe>
        </div>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>
